
<div align="center">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <h2 class="jumbotron">CLC Minesweeper Application</h2>
    <hr />
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div style="float: right">

                @Html.ActionLink("Home", "", "Home", new { area = "" }, new { @class = " m-1 btn btn-primary" })
                @if ((MilestoneCST247.Models.User)Session["user"] == null)
                {
                    <div style="float: right">
                        @Html.ActionLink("Login", "index", "login", new { area = "" }, new { @class = " m-1 btn btn-primary" })

                        @Html.ActionLink("Register", "index", "register", new { area = "" }, new { @class = "m-1 btn btn-primary" })
                    </div>
                }
                @if ((MilestoneCST247.Models.User)Session["user"] != null)
                {
                    <div style="float: right">
                        @Html.ActionLink("Highscores", "../Highscore", new { area = "" }, new { @class = " m-1 btn btn-primary" })
                        @Html.ActionLink("Current Game", "../Game", new { area = "" }, new { @class = " m-1 btn btn-primary" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>